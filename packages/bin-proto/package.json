{
    "name": "@folkways/bin-proto",
    "version": "0.0.0",
    "description": "Binary protocol for Folkways RTE, TS implementation",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./iife": "./dist/index.global.js"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup --config tsup.base.config.ts && tsup --config tsup.iife.config.ts",
        "dev": "tsup --config tsup.base.config.ts  --watch && tsup --config tsup.iife.config.ts --watch",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "lint": "eslint src",
        "clean": "rm -rf dist",
        "prepublishOnly": "pnpm build"
    },
    "keywords": [
        "binary",
        "protocol",
        "wire-format",
        "real-time",
        "folkways"
    ],
    "author": "Folkways",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.9.2",
        "@vitest/coverage-v8": "4.0.6",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "vitest": "^4.0.6"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Folkways/folkways-js.git",
        "directory": "packages/bin-proto"
    }
}